// Assignment 1 Problem 2:
function transpose_note_by_steps (note, steps)
	declare result = (note + steps)
end function

declare note = read_input
	“A” = 1
	“B” = 2
	“C” = 3
	“D” = 4
	“E” = 5
	“F” = 6
	“G” = 7
declare steps = read_input(“Pick a number 1-7”)

print transpose_note_by_steps (note, steps)
if transpose_note_by_steps > 7
	print newNote = transpose_note_by_steps - 7
end if
end


