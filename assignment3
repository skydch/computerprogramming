// Part 2:

function is_letter(myLetter)
	if myLetter = “ “ or myLetter = “.” or myLetter = “,” or myLetter = “?”
		return false
	else
		return true
	end if
end function

 function do_something(in_string, in_number)
   declare a, b, c

   a = 1

   loop
     is_letter(in_string.at(a)) == " " or
     then
       in_number = in_number - 1

       if in_number == 1 then
         break loop
       end if
     end if

     a = a + 1
   end loop

   b = a + 1

   loop
     is_letter(in_string.at(b))
     then
       break loop
     end if

     b = b + 1
   end loop

   c = ""
   a = a + 1
   loop
     if a == b then
       break loop
     end if

     c = c + in_string.at(a)

     a = a + 1
   end loop

  return c
end function
